{{#if success}}
  <div class="row">
    <div class="card-panel green col s10 offset-s1">
      {{success}}
    </div>
  </div>
{{/if}}
{{#if error}}
  <div class="row">
    <div class="card-panel red col s10 offset-s1">
      {{error}}
    </div>
  </div>
{{/if}}
<div class="row">
  <div class="col s10 offset-s1">
    <table class="striped">
      <thead>
        <tr>
          <th>Username</th>
          <th>Name</th>
          <th>Password</th>
          <th>Bio</th>
          <th>Score</th>
          <th>Events</th>
        </tr>
      </thead>
      <tbody id="users-table">
        {{#each users}}
          <tr class="user-row" data-href="{{username}}-modal" style="cursor:pointer;">
            <td>{{username}}</td>
            <td>{{name}}</td>
            <td>{{password}}</td>
            <td>{{bio}}</td>
            <td>{{score}}</td>
            <td>{{events}}</td>
          </tr>
          <div id="{{username}}-modal" class="modal">
            <form method="post" action="/volunteer">
              <div class="modal-content">
                <h4>Editing {{username}}</h4>
                <input name="username" type="hidden" value="{{username}}">
                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Name" id="name" name="name" type="text" class="validate" value="{{name}}">
                    <label for="name">Name</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Password" id="password" name="password" type="text" class="validate" value="{{password}}">
                    <label for="password">Password</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Bio" id="bio" name="bio" type="text" class="validate" value="{{bio}}">
                    <label for="bio">Bio</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Score" id="score" name="score" type="number" class="validate" value="{{score}}">
                    <label for="score">Score</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Events" id="events" name="events" type="text" class="validate" value="{{events}}">
                    <label for="events">Events</label>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <input type="submit" class="modal-action waves-effect waves-green btn-flat" value="Submit">
                <a class="modal-close waves-effect waves-red btn-flat">Close</a>
              </div>
            </form>
          </div>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<div class="fixed-action-btn">
  <button type="submit" class="waves-effect waves-light btn-floating btn-large amber white-text"><i class="material-icons">add</i></button>
</div>
