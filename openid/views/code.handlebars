{{#if err_msg}}
<div class="row">
  <div class="col s12">
    <div class="card-panel red">
      <span class="white-text">{{err_msg}}</span>
    </div>
  </div>
</div>
{{/if}}

<div class="row">
  <div class="col s8 offset-s2">
    <div class="card cyan lighten-5">
      <div class="card-content">
        <span class="card-title">Please login {{#if client_name}}to <b>{{client_name}}</b>{{/if}}</span>
        <form id="loginForm" method="POST" action="/authcode">
          <div class="row">
            <div class="input-field col s12">
              <input id="email" name="email" placeholder="Email" type="email" class="validate" value="{{login_hint}}">
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" name="password" placeholder="Password" type="password" class="validate">
              <label for="password">Password</label>
            </div>
          </div>
          <input id="state" name="state" value="{{state}}" type="hidden">
          <input id="nonce" name="nonce" value="{{nonce}}" type="hidden">
          <input id="redirect_uri" name="redirect_uri" value="{{redirect_uri}}" type="hidden">
          <input id="client_id" name="client_id" value="{{client_id}}" type="hidden">
          <input id="client_name" name="client_name" value="{{client_name}}" type="hidden">
          <input id="scopes" name="scopes" value="{{scopes}}" type="hidden">
          <input class="waves-effect waves-light btn cyan" type="submit" value="Login">
        </form>
      </div>
    </div>
  </div>
</div>
